<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:clickable="true"
    android:id="@+id/cardListTask"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageViewRowListTasks"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_weight="50"
                    android:src="@drawable/row_list_view" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblRowListTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_weight="50"
                        android:gravity="center"
                        android:text="TextViewtitle"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:text="TextView"
                        android:textAlignment="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblRowListTaskTimeStamp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="TextView2" />

            <TextView
                android:id="@+id/lblRowListTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:gravity="center"
                android:text="TextView3"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>